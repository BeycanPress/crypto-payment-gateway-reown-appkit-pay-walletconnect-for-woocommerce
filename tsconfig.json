    "strict": true,
    "target": "esnext",
    "module": "nodenext",
    "skipLibCheck": true,
    "rootDir": "./src/ts",
    "outDir": "./assets/js",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/ts/**/*.ts"],
  "exclude": ["node_modules", "vendor"]
}
